  <!--需求说明-->
  <view class='weui-panel'>
    <view class="weui-cells__title">需求说明</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea class="weui-textarea" placeholder="请具体说明需要嘉宾配合那些工作" style="height: 3.3em" />
