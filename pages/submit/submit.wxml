        </view>
      </view>
    </view>
  </view>
  <!--项目介绍-->
  <view class='weui-panel'>
    <view class="weui-cells__title">项目介绍</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea class="weui-textarea" placeholder="请具体说明项目背景 、活动主题和相关内容" style="height: 3.3em" />
          <!-- <view class="weui-textarea-counter">0/200</view> -->
        </view>
      </view>
    </view>
  </view>
  <!--预约时间-->
  <view class='weui-panel'>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">预约时间</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="date" value="{{date}}" start="2018-05-01" end="2035-09-01" bindchange="bindDateChange">
            <view class="weui-input" style='color: #808080;'>{{date}}</view>
          </picker>
        </view>
        <view class="weui-cell__ft">
          <view class="weui-vcode-btn" bindtap='selectTime'>待定</view>
        </view>
      </view>
    </view>
  </view>

  <!--活动地点-->
  <view class='weui-panel'>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">活动地点</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入" />
      </view>
    </view>
  </view>

  <!--公司名称-->
  <view class='weui-panel'>
