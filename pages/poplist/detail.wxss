/*相关视频*/
.dd{
  /* width: 750rpx; */
  display: flex;
  flex-direction: row;
}
.d-video{
  border-top:1px solid black;
  border-bottom:1px solid black;
  background: white;
  margin-top: 20rpx;
}
.d-videocont{
  display: flex;
  flex-direction: row;
}
.d-videocont view{
  margin-left: 50rpx;
}
.d-img{
  margin-top: 20rpx;
  margin-left: 40rpx;
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
}
/*近期来华*/
.news view:nth-of-type(odd){
  background: red;
}
.news view:nth-of-type(even){
  background: yellowgreen;
}
