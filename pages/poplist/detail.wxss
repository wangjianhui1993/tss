/*相关内容报道*/
.report{
  display: flex;
  flex-direction: column;
   border-top:1px solid black;
  border-bottom:1px solid black;
  background: white;
  margin-top: 20px;
}
.report view{
  margin-top: 20px;
}
/*视频弹出窗 */
.tost{
  position: fixed;
  width: 100%;
  height: 100%;
  background: black;
  left: 0;
  top:0;
}
.tost-cont{
  width: 400rpx;
  height: 400rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -200rpx;
  margin-top: -300rpx; 
  background: white;
}
.tost-cont{
  width: 200rpx;
  height: 200rpx;
}
